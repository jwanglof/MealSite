extends layout

block content
  h1 Dina m√•ltider

  if message
    h2
      = message

  div.row.ingredient_title
    div.col-md-4 Namn
    div.col-md-6 Beskrivning
    div.col-md-2
      span.question_edit [?]
      span.question_private [?]
      span.question_remove [?]

  each meal in meals
    div.row.user_meals(id=meal["id"])
      div.col-md-4
        = meal["name"]
      div.col-md-6
        = meal["description"]
      div.col-md-2
        span.glyphicon.glyphicon-pencil.my_meals.edit
        
        if meal["private"] == 1
          span.glyphicon.glyphicon-off.my_meals.private
        else
          span.glyphicon.glyphicon-ban-circle.my_meals.private
        
        span.glyphicon.glyphicon-trash.my_meals.remove